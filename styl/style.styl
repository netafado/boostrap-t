@import 'styl/app/*'

// COLORS //
$primary 	= #FAFBE3
$fonts 		= #413504

// BREAK POINTS
$small 		= 780px
$medium 	= 980px

// border-radius pattern
border-radius( $radius = 10px )
	-webkit-border-radius 5px
	border-radius 5px
	
padding-margin( $n = 5px )
	padding 10px
	margin 	10px
	
cf()
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both

body
	background-color: primary
	color: $fonts
	.main
		cf()
	